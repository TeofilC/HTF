#!/bin/bash

DEBUG=no
TOP=$(cd $(dirname ${BASH_SOURCE[0]})/.. > /dev/null && pwd -P)
dist=$(stack $HTF_TRAVIS_STACK_ARGS path --dist-dir)
find=find
if [ "$(uname)" == "Darwin" ]; then
    find=gfind
fi
stack $HTF_TRAVIS_STACK_ARGS build >&2
bin=$($find "$TOP/$dist" -name htfpp -type f -executable -printf "%T+\t%p\n" | sort -r | head -1 | gawk '{print $2}')

if [ "$DEBUG" == "yes" ]; then
    echo "TOP=$TOP" >&2
    echo "dist=$dist" >&2
    echo "bin=$bin" >&2
fi

if [ -z "$bin" ]; then
    echo "No executable named htfpp found in $TOP/$dist" >&2
    echo "TOP=$TOP" >&2
    echo "dist=$dist" >&2
    find "$TOP/$dist" -type f >&2
    exit 1
fi
"$bin" "$@"
