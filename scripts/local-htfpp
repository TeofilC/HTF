#!/bin/bash

TOP=$(cd $(dirname ${BASH_SOURCE[0]})/.. > /dev/null && pwd -P)
d=$(stack $HTF_TRAVIS_STACK_ARGS path --dist-dir)
bin="$TOP/$d/build/htfpp/htfpp"

if [ ! -x "$bin" ]; then
    echo "No executable found at $bin" >&2
    echo "TOP=$TOP" >&2
    echo "dist=$d" >&2
    find "$TOP/build" -name htfpp -type f >&2
    exit 1
fi
"$bin" "$@"
